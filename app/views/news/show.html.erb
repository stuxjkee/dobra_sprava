<div class="span10">
  <h1> <%= @news.title %> </h1>
  <% if can? :destroy, News %>
</br> <%= link_to 'Удалить', @news, :confirm => 'Are you sure?',
          :method => :delete %> | 
     <%= link_to 'Редактировать', edit_news_path(@news) %>
  <% end %>

  <%= image_tag @news.image_url, class: 'leftimg bigimg' %>

  <p> <%= @news.content.html_safe %></p>
    <p class="text-muted"> <%= @news.created_at %></p>

  
</div>